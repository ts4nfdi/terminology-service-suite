{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types/"],
    "jsx": "react-jsx",
    "declaration": true,
    "module": "ESNext",
    "outDir": "dist/esm"
  },
  "exclude": ["dist"],
  "include": [
    "./packages/**/*",
    ".storybook/**/*",
    "packages/react/.storybook/main.ts",
    "packages/react/.storybook/preview.tsx",
    "packages/react/.storybook/vitest.setup.ts"
  ]
}
