{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types/"],
    "jsx": "react",
    "declaration": true,
    "declarationDir": "dist/esm/types"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": ["./src/**/*"]
}