{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types/"],
    "jsx": "react",
    "declaration": true,
    "module": "ESNext",
    "outDir": "dist/esm"
  },
  "exclude": ["dist"],
  "include": ["./src/**/*"]
}
